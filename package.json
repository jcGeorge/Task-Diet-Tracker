{
  "name": "task-diet-tracker",
  "version": "0.1.0",
  "description": "Electron + React/Vite task and diet tracker",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "npm run build:electron && concurrently -k \"npm run dev:renderer\" \"npm run dev:app\"",
    "dev:renderer": "vite",
    "dev:app": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 node scripts/run-electron.cjs .",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "tsc --noEmit && vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "start": "node scripts/run-electron.cjs .",
    "preview": "vite preview",
    "dist:win": "npm run build && electron-builder --win nsis --config.directories.output=release-alt",
    "dist:win:portable": "npm run build && electron-builder --win portable --config.directories.output=release-alt"
  },
  "build": {
    "appId": "com.taskdiettracker.app",
    "productName": "Task & Diet Tracker",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "win": {
      "artifactName": "TaskDietTracker-${version}-${arch}.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Task & Diet Tracker"
    }
  },
  "dependencies": {
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^6.30.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.0",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.1.2",
    "cross-env": "^10.0.0",
    "electron": "^35.0.0",
    "electron-builder": "^26.7.0",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "wait-on": "^8.0.2"
  }
}
